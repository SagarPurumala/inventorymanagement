		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public boolean addProduct(Product product) {
		EntityManager manager = emf.createEntityManager();
		EntityTransaction tx = manager.getTransaction();
		try {
			tx.begin();
			manager.persist(product);
			tx.commit();				
			return true;	

		} catch (Exception e) {
			e.printStackTrace();
		}
		manager.close();
		return false;
	}

